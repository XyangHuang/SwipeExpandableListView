<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/layout_options"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/text_option"
            android:layout_width="@dimen/margin_400px"
            android:layout_height="match_parent"
            android:background="@color/common_red"
            android:text="option"
            android:gravity="center"/>

        <TextView
            android:id="@+id/text_option_2"
            android:layout_width="@dimen/margin_400px"
            android:layout_height="match_parent"
            android:background="@color/common_blue"
            android:text="option2"
            android:gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_surface"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include
            layout="@layout/view_custom_child_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/operation_order_item_layout_height"/>
    </LinearLayout>

    <View
        android:id="@+id/view_divide_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_1px"
        android:background="@color/common_divide_line"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>