<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.root.testswipeexpandablelistview.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_notify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/common_blue"
            android:text="Notify DataSet Changed"/>

        <com.example.root.testswipeexpandablelistview.customview.DemoListView2
            android:id="@+id/list_view_1"
            android:layout_width="@dimen/margin_1200px"
            android:layout_height="match_parent"/>
    </LinearLayout>
</ScrollView>
